<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeWorkCalculator" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textSize">36sp</item>
        <item name="android:backgroundTint">@color/custom_button_color</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="CustomButtonSign1Style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">36sp</item>
        <item name="android:backgroundTint">@color/custom_button_color</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="CustomButtonSign2Style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">26sp</item>
        <item name="android:backgroundTint">@color/custom_button_color</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>
</resources>